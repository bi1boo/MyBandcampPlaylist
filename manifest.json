{
  "manifest_version": 3,
  "name": "Bandcamp Listenlist",
  "version": "1.0",
  "description": "Build a listenlist in your browser as you dig through Bandcamp",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["https://*.bandcamp.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "72": "images/icon-72.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
    }}}
}
